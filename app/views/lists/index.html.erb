<div class='container'>
  <h1>Movie Lists</h1>
  <div class='card-container'>
    <div class="column scrollable">
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do%>
          <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
            <div class='name-color'>
              <%= list.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to 'Add a list', new_list_path, class: 'btn-light text-decoration-none text-white add-list' %>
    <div class="row">
      <h1>All Movies</h1>
      <% @movies.each do |movie| %>
        <div class="col-6 col-lg-3">
          <div class="card" style="width: 12rem; height: 16rem;">
            <%= image_tag(movie.poster_url) %>
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
              <%= link_to new_bookmark_path(movie.id) do %>
                <div class="btn btn-primary">
                  <i class="fa-regular fa-bookmark"></i>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
